<div class="logincontainer" style="background-color: #f5f5f5">
<div class="form-signin">
<h2 class="form-signin-heading"><%= t :sign_up%></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <% if devise_error_messages! != "" %>
  <div class="alert"><%= devise_error_messages! %></div>
  <% end %>


  <%= f.email_field :email, :class => "input-block-level", :placeholder => (t :email_address)%>

  <%= f.input (t :select_user_type), :controlling_unit, :class => "input-block-level", :as => :select, :collection => [[(t :provider), false], [(t :cu), true]] %>

	<div class="row-fluid">
       <%= f.submit (t :create_user_email), :class=> "btn btn-large btn-primary span6"%>
       <input type=button class="btn btn-large btn-primary span6" value='<%= t :cancel %>' onclick= "cancel_button()">
	</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
