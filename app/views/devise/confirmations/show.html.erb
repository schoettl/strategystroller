<h2>You're almost done! Now create a password to securely access your account.</h2>

 <%= form_for(resource, :as => resource_name, :url => user_confirm_path) do |form| %>
   <%= devise_error_messages! %>

   <div><%= form.label :password %><br />
   <%= form.password_field :password, :autofocus => true %></div>

   <div><%= form.label :password_confirmation %><br />
   <%= form.password_field :password_confirmation %></div>

    <div><%= form.label :username %><br />
    <%= form.text_field :username %></div>

   <div><%= form.hidden_field :confirmation_token %></div>

   <div><%= form.submit 'Confirm Account' %></div>
 <% end %>

 <%= render "devise/shared/links" %>



